<section class="gp-card gp-fade-1">
  <div class="gp-card__header">
    <div>
      <h1 class="gp-card-title gp-mb-0"><%= @gossip.title %></h1>
      <p class="gp-card-subtitle gp-mb-0">
        <% if @gossip.user.present? %>
          Partagé par <%= link_to @gossip.user.first_name, user_profile_path(@gossip.user), class: "gp-text-accent" %>
        <% else %>
          Partagé par <span class="gp-text-muted">Anonyme</span>
        <% end %>
      </p>
    </div>
    <span class="gp-badge">Gossip #<%= @gossip.id %></span>
  </div>

  <div class="gp-card-body">
    <p class="gp-text-muted">Ce qu’il nous apprend de croustillant :</p>
    <div><%= simple_format(@gossip.content) %></div>
  </div>

  <div class="gp-flex gp-gap-md gp-mt-3">
    <%= link_to "Revenir aux potins", root_path, class: "gp-btn gp-btn--ghost" %>
    <%= link_to "Publier un gossip", new_gossip_path, class: "gp-btn gp-btn--primary" %>
  </div>
</section>
