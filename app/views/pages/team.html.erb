<section class="gp-card gp-fade-1">
  <header class="gp-card__header">
    <div>
      <h1 class="gp-card-title gp-mb-0">Notre équipe</h1>
      <p class="gp-card-subtitle gp-mb-0">Une team soudée pour t’apporter les meilleurs potins.</p>
    </div>
    <span class="gp-badge gp-badge--success">Dream Team</span>
  </header>
  <% contacts = [
      { title: "Web design", user: User.first },
      { title: "Data Scientist", user: User.second },
      { title: "Support Presse", user: User.third }
    ] %>

  <div class="gp-grid gp-grid-3">
    <% contacts.each_with_index do |entry, index| %>
      <% user = entry[:user] %>
      <% next unless user %>
      <article class="gp-card gp-neon-section gp-fade-<%= [index + 2, 4].min %>">
        <div class="gp-card-body">
          <div class="gp-contact-panel">
            <h3 class="gp-card-title gp-mb-1"><%= entry[:title] %></h3>
            <dl class="gp-stack gp-mb-0">
              <div>
                <dt class="gp-text-muted gp-mb-1">Nom &amp; prénom</dt>
                <dd class="gp-mb-0"><%= "#{user.first_name} #{user.last_name}" %></dd>
              </div>
              <div>
              <dt class="gp-text-muted gp-mb-1">Email</dt>
              <dd class="gp-mb-0">
                <a href="mailto:<%= user.email %>" class="gp-text-accent"><%= user.email %></a>
              </dd>
            </div>
              <div>
                <dt class="gp-text-muted gp-mb-1">Âge</dt>
                <dd class="gp-mb-0"><%= user.age %> ans</dd>
              </div>
            </dl>
          </div>
        </div>
      </article>
    <% end %>
  </div>
</section>